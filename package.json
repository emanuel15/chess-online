{
  "name": "chess-online",
  "version": "1.0.0",
  "description": "An online chess game made using Node.js, WebSockets and PixiJS",
  "private": true,
  "scripts": {
    "watch": "webpack --watch",
    "devserver": "webpack-dev-server --open",
    "build:client": "webpack --mode production",
    "build:server": "tsc --target es5 --outDir dist/ server/main.ts",
    "build": "npm run build:client && npm run build:server",
    "start:dev": "ts-node server/main.ts",
    "start": "node dist/main.js"
  },
  "keywords": [],
  "author": "emanuel15",
  "license": "GPLv2",
  "devDependencies": {
    "ts-loader": "^9.4.2",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.2",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.10.1"
  },
  "dependencies": {
    "@tweenjs/tween.js": "^17.4.0",
    "@types/express": "^4.17.0",
    "@types/pixi.js": "^4.8.8",
    "@types/tween.js": "^17.2.0",
    "@types/uuid": "^3.4.5",
    "@types/ws": "^6.0.1",
    "express": "^4.17.1",
    "pixi.js-legacy": "^5.0.4",
    "uuid": "^3.3.2",
    "ws": "^7.0.1"
  }
}
